    data-no-turbolink="true"
  <% end %>

<div class="page-header">
  <h2>
    Action
  </h2>
  <div class="fb-share-button" data-href="https://enerlet1.herokuapp.com/footprint" data-layout="button_count" data-mobile-iframe="true"></div>
</div>

<div class="jumbotron">
  <h1>For the planet, every action matters.</h1>
  <p>Browse through our marketplace to offset carbon and purchase green products.</p>
</div>

<style>
  .carousel-inner > .item > img,
  .carousel-inner > .item > a > img {
      width: 70%;
      margin: auto;
  }
  </style>

<div class="container">
  <br>
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <img src="http://www.environmental-watch.com/wp-content/uploads/2013/11/American-Forests-logo-green.jpg" width="100%" height="345">
        <div class="carousel-caption">
        <h3><a href="https://www.americanforests.org/ways-to-give/plant-trees/?amount=&source_code=">Offset carbon with American Forests</a></h3>
        <p>For $1 per tree you can offset your carbon</p>
        </div>
      </div>

      <div class="item">
        <img src="https://media.licdn.com/media/p/7/005/077/002/280532f.png" width="460" height="345">
        <div class="carousel-caption">
        <h3><a href="http://www.greenhome.com/green-products-home.html=">Shop for green products with GreenHome</a></h3>
        <p>From home products to energy efficiency</p>
        </div>
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<script>$('.carousel').carousel()</script>

