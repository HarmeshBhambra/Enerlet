<div class="page-header">
  <h2>
    Lifestyle
  </h2>
  <div class="fb-share-button" data-href="https://enerlet1.herokuapp.com/" data-layout="button_count" data-mobile-iframe="true"></div>
</div>

<div class="jumbotron">
  <h1>We want to know you better.</h1>
  <p>We can help you understand and reduce your carbon footprint by knowing more about your habits.</p>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_survey" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">
      </div>

      <!-- Label and input for diet -->
      <div class="form-group">
        <label for="diet" class="control-label">
          What is your diet?
        </label>

        <select class="form-control" id="diet" name="diet">
            <option value="Meat Lover">Meat Lover</option>
            <option value="Average American">Average American</option>
            <option value="No Beef">No Beef</option>
            <option value="Vegetarian">Vegetarian</option>
            <option value="Vegan">Vegan</option>
        </select>
      </div>

      <!-- Label and input for car_type -->
      <div class="form-group">
        <label for="car_type" class="control-label">
          What type of car do you ride or drive in?
        </label>

        <select class="form-control" id="car_type" name="car_type">
          <option value="0">N/A (I don't use a car)</option>
          <option value="1">Hybrid</option>
          <option value="2">Small</option>
          <option value="3">Mid-sized</option>
          <option value="4">Large</option>
        </select>
      </div>

      <!-- Label and input for car_miles -->
      <div class="form-group">
        <label for="car_miles" class="control-label">
          What is your yearly mileage?
        </label>

        <select class="form-control" id="car_miles" name="car_miles">
          <option value="0">Less than 5,000</option>
          <option value="1">5-10,000</option>
          <option value="2">10-20,000</option>
          <option value="3">20-30,000</option>
        </select>
      </div>

      <!-- Label and input for car_share -->
      <div class="form-group">
        <label for="car_share" class="control-label">
          Do you share this mileage with other people? (passengers or driver)
        </label>

        <select class="form-control" id="car_share" name="car_share">
          <option value="0">0 people</option>
          <option value="1">1 person</option>
          <option value="2">2 persons</option>
          <option value="3">3 persons</option>
        </select>
      </div>

      <!-- Label and input for flight_miles -->
      <div class="form-group">
        <label for="flight_miles" class="control-label">
          What is your annual flight miles?
        </label>

        <select class="form-control" id="flight_miles" name="flight_miles">
          <option value="0">0-15 Hours (0-7500 miles)</option>
          <option value="1">15-30 Hours (7500-15,000 miles)</option>
          <option value="2">30-45 Hours (15,000-22,500 miles)</option>
          <option value="3">45-60 Hours (22,500-30,000 miles)</option>
          <option value="4">60+ Hours (30,000+ miles)</option>
        </select>
      </div>

      <!-- Label and input for flight_type -->
      <!-- <div class="form-group">
        <label for="flight_type" class="control-label">
          Flight type
        </label>

        <input type="text" id="flight_type" name="flight_type" placeholder="Flight type" class="form-control" value="<%= @survey.flight_type %>">
      </div> -->

      <button class="btn btn-success">
        Submit
      </button>
    </form>
  </div>
</div>

